<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray">

    <android.support.constraint.Guideline
        android:id="@+id/guideline_mp_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".4" />

    <EditText
        android:id="@+id/edit_mp_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/edit_mp_code_margin_horizontal"
        android:layout_marginRight="@dimen/edit_mp_code_margin_horizontal"
        android:background="@android:color/white"
        android:hint="@string/edit_mp_code_hint"
        android:inputType="text"
        android:textSize="@dimen/edit_mp_code_text_size"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guideline_mp_code" />

    <Button
        android:id="@+id/btn_mp_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/btn_mp_code_margin_top"
        android:background="@android:color/white"
        android:text="@string/btn_enter"
        android:textAllCaps="false"
        android:textSize="@dimen/btn_mp_code_text_size"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_mp_code" />
</android.support.constraint.ConstraintLayout>

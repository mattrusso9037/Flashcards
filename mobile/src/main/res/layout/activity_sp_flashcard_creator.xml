<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray"
    tools:context=".SP_FlashcardCreatorActivity">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/clt_sp_flashcard_viewer_top"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/clt_sp_flashcard_creator_top_margin_bottom"
        android:layout_marginTop="@dimen/clt_sp_flashcard_creator_top_margin_top"
        android:background="@android:color/white"
        app:layout_constraintBottom_toTopOf="@id/clt_flashcard_creator_bottom"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/txt_flashcard_creator_side_a"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/clt_sp_flashcard_creator_items_padding_bottom"
            android:layout_marginStart="@dimen/txt_sp_flashcard_creator_margin_left"
            android:layout_marginTop="@dimen/clt_sp_flashcard_creator_items_padding_top"
            android:gravity="end"
            android:text="@string/txt_side_a_with_colon"
            android:textColor="@android:color/black"
            android:textSize="@dimen/txt_sp_flashcard_creator_text_size"
            android:textStyle="italic"
            app:layout_constraintBottom_toTopOf="@id/txt_flashcard_creator_side_b"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/edit_flashcard_creator_side_a"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/clt_sp_flashcard_creator_items_padding_bottom"
            android:layout_marginEnd="@dimen/edit_sp_flashcard_creator_margin_right"
            android:layout_marginStart="@dimen/edit_sp_flashcard_creator_margin_left"
            android:layout_marginTop="@dimen/clt_sp_flashcard_creator_items_padding_top"
            android:hint=""
            android:inputType="text"
            app:layout_constraintBottom_toTopOf="@id/edit_flashcard_creator_side_b"
            app:layout_constraintLeft_toRightOf="@id/txt_flashcard_creator_side_a"
            app:layout_constraintRight_toLeftOf="@id/fab_flashcard_creator"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_flashcard_creator_side_b"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/clt_sp_flashcard_creator_items_padding_bottom"
            android:layout_marginStart="@dimen/txt_sp_flashcard_creator_margin_left"
            android:layout_marginTop="@dimen/clt_sp_flashcard_creator_items_padding_top"
            android:gravity="end"
            android:text="@string/txt_side_b_with_colon"
            android:textColor="@android:color/black"
            android:textSize="@dimen/txt_sp_flashcard_creator_text_size"
            android:textStyle="italic"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_flashcard_creator_side_a" />

        <EditText
            android:id="@+id/edit_flashcard_creator_side_b"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/clt_sp_flashcard_creator_items_padding_bottom"
            android:layout_marginEnd="@dimen/edit_sp_flashcard_creator_margin_right"
            android:layout_marginStart="@dimen/edit_sp_flashcard_creator_margin_left"
            android:layout_marginTop="@dimen/clt_sp_flashcard_creator_items_padding_top"
            android:hint=""
            android:inputType="text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/txt_flashcard_creator_side_b"
            app:layout_constraintRight_toLeftOf="@id/fab_flashcard_creator"
            app:layout_constraintTop_toBottomOf="@id/edit_flashcard_creator_side_a" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_flashcard_creator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/fab_margin_vertical"
            android:layout_marginEnd="@dimen/fab_margin_horizontal"
            android:src="@android:drawable/ic_menu_add"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/clt_flashcard_creator_bottom"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/clt_sp_flashcard_creator_bottom_margin_top"
        android:background="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/clt_sp_flashcard_viewer_top">

        <ListView
            android:id="@+id/flashcards_listview_old"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:scrollbars="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!--<ScrollView
            android:id="@+id/sv_flashcards"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            android:fillViewport="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/llt_flashcards"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </ScrollView>-->
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>
